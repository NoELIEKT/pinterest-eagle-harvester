# Pinterest
PINTEREST_EMAIL=
PINTEREST_PASSWORD=
PINTEREST_HEADLESS=true
PINTEREST_LOCALE=ko-KR

# comma-separated keywords
PINTEREST_KEYWORDS=interior moodboard,minimal poster,brand identity

# crawl controls
MAX_PINS_PER_KEYWORD=30
SCROLL_ROUNDS=8
RANDOM_SLEEP_MIN=0.8
